<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include layout/header.ejs %>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
      <%- include layout/navigation.ejs %> 
      <%- include layout/sidebar.ejs %> 
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Wonder Works Studio
            <small>Search</small>
          </h1>
          <ol class="breadcrumb">
            <li>
              <a href="#"><i class="fa fa-home"></i> User Management</a>
            </li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <!-- left column -->
              <div class="col-md-8">
                <!-- general form elements -->
                <div class="box box-primary">
                  <div class="box-header">
                    <h3 class="box-title">User Creation</h3>
                  </div>
                  <!-- /.box-header -->
                  <!-- form start -->
                  <form action="/handle-account-creation" method="post">
                    <div class="box-body">
                      <div class="form-group">
                        <label for="email" name="email">Email</label>
                        <input type="text" class="form-control" id="email" name="email" placeholder="jtanner@wonderworks.gg">
                      </div>
                      <div class="form-group">
                        <label for="name" name="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Joshua Tanner">
                      </div>
                      <div class="form-group">
                        <label for="password" name="password">Password</label>
                        <input type="text" class="form-control" id="password" name="password" value="<%- Array(24).fill("0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz").map(function(x) { return x[Math.floor(Math.random() * x.length)] }).join(''); %>" readonly>
                      </div>
                    </div>
                    <!-- /.box-body -->
    
                    <div class="box-footer">
                      <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                  </form>
                </div>
              </div>
              <% if (email && password && name) { %>
              <div class="col-md-4">
                <!-- general form elements -->
                <div class="box box-success">
                  <div class="box-header">
                    <h3 class="box-title">User Created</h3>
                  </div>
                  <!-- /.box-header -->
                  <!-- form start -->
                  <div class="box-body">
                    You've successfully created a new user account.<br><br>
                    You can send the following to <strong><%- name %></strong>:
                    <div class="box box-solid box-success">
                        Hi, <%- name %>!<br>
                        Here's your account info for panel.wonderworks.gg:<br><br>
                        Email: <%- email %><br>
                        Password: <%- password %>
                    </div>
                  </div>
                </div>
              </div>
          </div>
          <% } %>
        </section>
        <!-- /.content -->
      </div> 
      <%- include layout/footer.ejs %> 
      <%- include layout/control-sidebar.ejs %>
    </div>
    <!-- ./wrapper -->
    <%- include layout/js.ejs %>
  </body>
</html>